# ============================================================================
# Azure Production Environment Configuration
# ============================================================================
# 此文件為生產環境的環境變數範例
# 實際值應存儲在公司 Azure Key Vault 中，通過 @Microsoft.KeyVault() 引用
# ============================================================================

# ----------------------------------------------------------------------------
# 基礎配置
# ----------------------------------------------------------------------------
NODE_ENV=production
PORT=3000
NEXT_TELEMETRY_DISABLED=1

# ----------------------------------------------------------------------------
# 應用 URL
# ----------------------------------------------------------------------------
NEXTAUTH_URL=@Microsoft.KeyVault(VaultName=YOUR_COMPANY_KV;SecretName=ITPM-PROD-NEXTAUTH-URL)
# 實際值範例: https://app-itpm-prod-001.azurewebsites.net 或自定義域名

# ----------------------------------------------------------------------------
# NextAuth 認證配置
# ----------------------------------------------------------------------------
NEXTAUTH_SECRET=@Microsoft.KeyVault(VaultName=YOUR_COMPANY_KV;SecretName=ITPM-PROD-NEXTAUTH-SECRET)
NEXTAUTH_SESSION_MAX_AGE=86400

# ----------------------------------------------------------------------------
# 數據庫配置
# ----------------------------------------------------------------------------
DATABASE_URL=@Microsoft.KeyVault(VaultName=YOUR_COMPANY_KV;SecretName=ITPM-PROD-DATABASE-URL)

# ----------------------------------------------------------------------------
# Azure AD B2C 認證
# ----------------------------------------------------------------------------
AZURE_AD_B2C_TENANT_NAME=@Microsoft.KeyVault(VaultName=YOUR_COMPANY_KV;SecretName=ITPM-PROD-AZURE-AD-B2C-TENANT-NAME)
AZURE_AD_B2C_TENANT_ID=@Microsoft.KeyVault(VaultName=YOUR_COMPANY_KV;SecretName=ITPM-PROD-AZURE-AD-B2C-TENANT-ID)
AZURE_AD_B2C_CLIENT_ID=@Microsoft.KeyVault(VaultName=YOUR_COMPANY_KV;SecretName=ITPM-PROD-AZURE-AD-B2C-CLIENT-ID)
AZURE_AD_B2C_CLIENT_SECRET=@Microsoft.KeyVault(VaultName=YOUR_COMPANY_KV;SecretName=ITPM-PROD-AZURE-AD-B2C-CLIENT-SECRET)
AZURE_AD_B2C_PRIMARY_USER_FLOW=B2C_1_signupsignin
AZURE_AD_B2C_SCOPE=openid profile email offline_access
NEXT_PUBLIC_AZURE_AD_B2C_ENABLED=true

# ----------------------------------------------------------------------------
# Azure Blob Storage
# ----------------------------------------------------------------------------
AZURE_STORAGE_ACCOUNT_NAME=@Microsoft.KeyVault(VaultName=YOUR_COMPANY_KV;SecretName=ITPM-PROD-AZURE-STORAGE-ACCOUNT-NAME)
AZURE_STORAGE_ACCOUNT_KEY=@Microsoft.KeyVault(VaultName=YOUR_COMPANY_KV;SecretName=ITPM-PROD-AZURE-STORAGE-ACCOUNT-KEY)
AZURE_STORAGE_CONNECTION_STRING=@Microsoft.KeyVault(VaultName=YOUR_COMPANY_KV;SecretName=ITPM-PROD-AZURE-STORAGE-CONNECTION-STRING)
AZURE_STORAGE_CONTAINER_QUOTES=quotes
AZURE_STORAGE_CONTAINER_INVOICES=invoices
AZURE_STORAGE_CONTAINER_PROPOSALS=proposals

# ----------------------------------------------------------------------------
# SendGrid Email 服務
# ----------------------------------------------------------------------------
SENDGRID_API_KEY=@Microsoft.KeyVault(VaultName=YOUR_COMPANY_KV;SecretName=ITPM-PROD-SENDGRID-API-KEY)
SENDGRID_FROM_EMAIL=@Microsoft.KeyVault(VaultName=YOUR_COMPANY_KV;SecretName=ITPM-PROD-SENDGRID-FROM-EMAIL)
SENDGRID_FROM_NAME=IT Project Management

# ----------------------------------------------------------------------------
# Azure Cache for Redis (生產環境建議啟用)
# ----------------------------------------------------------------------------
REDIS_URL=@Microsoft.KeyVault(VaultName=YOUR_COMPANY_KV;SecretName=ITPM-PROD-REDIS-URL)

# ----------------------------------------------------------------------------
# Azure Application Insights (監控)
# ----------------------------------------------------------------------------
APPLICATIONINSIGHTS_CONNECTION_STRING=@Microsoft.KeyVault(VaultName=YOUR_COMPANY_KV;SecretName=ITPM-PROD-APPINSIGHTS-CONNECTION-STRING)

# ----------------------------------------------------------------------------
# Feature Flags
# ----------------------------------------------------------------------------
NEXT_PUBLIC_FEATURE_AI_ASSISTANT=false
NEXT_PUBLIC_FEATURE_EXTERNAL_INTEGRATION=false
