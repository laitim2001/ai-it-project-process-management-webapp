{
  "name": "it-project-management-platform",
  "version": "0.1.0",
  "private": true,
  "description": "IT Project Process Management Platform - Centralized workflow management from budget allocation to expense charge-out",
  "keywords": [
    "it-project-management",
    "budget-management",
    "approval-workflow",
    "turborepo",
    "monorepo"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/ai-it-project-process-management-webapp"
  },
  "license": "UNLICENSED",
  "author": "IT Department",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:ci": "turbo run test -- --ci --coverage --maxWorkers=2",
    "test:watch": "turbo run test:watch",
    "test:api": "tsx scripts/api-health-check.ts",
    "test:api-health": "tsx scripts/api-health-check.ts",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "db:studio": "pnpm --filter db prisma studio",
    "db:generate": "pnpm --filter db prisma generate",
    "db:migrate": "pnpm --filter db prisma migrate dev",
    "db:push": "pnpm --filter db prisma db push",
    "db:seed": "pnpm --filter db prisma db seed",
    "index:check": "node scripts/check-index-sync.js",
    "index:check:incremental": "node scripts/check-index-sync.js --incremental",
    "index:fix": "node scripts/check-index-sync.js --auto-fix",
    "index:health": "node scripts/check-index-sync.js",
    "check:env": "node scripts/check-environment.js",
    "validate:i18n": "node scripts/validate-i18n.js",
    "check:i18n:messages": "node scripts/check-i18n-messages.js",
    "setup": "pnpm install && pnpm db:generate && node scripts/check-environment.js",
    "postinstall": "pnpm db:generate"
  },
  "dependencies": {
    "superjson": "^2.2.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "dotenv": "^17.2.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "tsx": "^4.7.1",
    "turbo": "^1.12.4",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.15.3",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}
